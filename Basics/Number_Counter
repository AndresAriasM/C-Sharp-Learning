using System;

namespace Number_Counter
{
    class Program
    { 
 
        static void Main(string[] args)
        {
            int random = 0;
            string counter = "";

            Console.WriteLine("Press enter to add a unit to the counter");
            Console.WriteLine("To end the program, enter any value and press enter.");

            while (counter.Equals(""))
            {
                counter = Console.ReadLine();
                random++;
                Console.WriteLine("The current number is {0}", random);
            }


            Console.Read();
        }

    }
}
